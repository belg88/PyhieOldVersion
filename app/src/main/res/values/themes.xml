<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pyhie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#48CAE4</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00B4D8</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:timePickerDialogTheme">@style/Theme.AppCompat.Light.Dialog</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="NewButton" parent="Widget.AppCompat.Button" >
        <item name="android:background">@color/primary</item>
        <item name="buttonTint">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="myTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersTextColor">#ffffff</item>
        <item name="android:numbersBackgroundColor">@color/light_grey</item>
        <item name="android:numbersSelectorColor">#88000000</item>
        <item name="android:headerBackground">@color/light_grey</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>