            android:layout_weight="1.7"
            android:background="@drawable/custom_button_two"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/change"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/removeMeal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:src="@drawable/cancel_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/mealText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            tools:text="Your goal is to have meal number 1 at 00:00" />

        <TextView
            android:id="@+id/changeMeal4"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1.7"
            android:textColor="@color/white"
            android:background="@drawable/custom_button_two"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/change"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/removeMeal4"
            android:layout_width="wrap_content"
