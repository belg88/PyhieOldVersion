<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#DF0382C6"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sleep_preferences"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/pref_bedtime1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/white"
        android:textSize="@dimen/large_inner"
        tools:text="You prefer going to bed at 00:00"
        android:textAlignment="center"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:id="@+id/pref_woke_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/large_inner"
        tools:text="You prefer going to bed at 00:00"
        android:textAlignment="center"
        android:lineSpacingExtra="5dp"
        tools:visibility="visible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout2"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:id="@+id/pref_bedtime2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/large_inner"
            tools:text="You prefer going to bed at 00:00"
            android:textAlignment="center"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/pref_woke_2"
            android:layout_marginTop="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/large_inner"
            tools:text="You prefer going to bed at 00:00"
            android:textAlignment="center"
            android:lineSpacingExtra="5dp"
            tools:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:id="@+id/pref_bedtime3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/large_inner"
            tools:text="You prefer going to bed at 00:00"
            android:textAlignment="center"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/pref_woke_3"
            android:layout_marginTop="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/large_inner"
            tools:text="You prefer going to bed at 00:00"
            android:textAlignment="center"
            android:lineSpacingExtra="5dp"
            tools:visibility="visible"/>
    </LinearLayout>

    <Button
        android:id="@+id/add_more"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_more"
        />
    <Button
        android:id="@+id/close"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close"/>

</LinearLayout>